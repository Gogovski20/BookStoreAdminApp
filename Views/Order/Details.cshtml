@{
}

@model BookStoreAdminApplication.Models.Order


<div class="container">
    <div>
        <a class="btn btn=success">Order for @Model.Owner.UserName</a>
    </div>

    @for(int i=0;i<Model.BooksInOrder.Count(); i++)
    {
        var item = Model.BooksInOrder.ElementAt(i).Book;
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

            <div class="card" style="width: 18rem; height: 35rem">
                <img class="card-img-top" src="@item?.BookImage" alt="Card image cap">
                <div class="card-body">

                    <h5 class="card-title">@item?.Title</h5>
                    <p class="card-text mb-2">Author: @item?.AuthorFullName</p>
                    <p class="card-text mb-2">Publisher: @item?.PublisherName</p>

                    <p class="card-text pb-2">Price: @item?.Price</p>
                </div>

            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
</div>